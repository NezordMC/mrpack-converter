---
import MainLayout from "@/layouts/MainLayout.astro";
import { AuroraBackground } from "@/components/ui/aurora-background";
import ConverterWrapper from "@/components/converter/ConverterWrapper";
import { PackageOpen, Github, Coffee } from "lucide-react";
import { Button } from "@/components/ui/button";
---

<MainLayout title="MrPack to ZIP Converter | Fast & Offline">
  <AuroraBackground client:load className="min-h-screen h-full">
    <div class="container relative mx-auto flex min-h-screen flex-col items-center justify-center px-4 py-10 md:py-20">
      
      <div class="text-center space-y-8 mb-12 relative z-10 max-w-3xl mx-auto">
        
        <div class="space-y-4">
          <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight text-transparent bg-clip-text bg-gradient-to-b from-white to-white/60 animate-in zoom-in-95 duration-1000">
            Modrinth Pack <br/>
            <span class="text-primary inline-block mt-2">Converter</span>
          </h1>
          
          <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed backdrop-blur-sm rounded-xl p-2">
            Transform <code class="bg-muted/50 border border-white/10 px-1.5 py-0.5 rounded text-foreground font-mono text-base">.mrpack</code> files into standard ZIPs.
            <br class="hidden md:block" />
            Client-side processing. No uploads. Fast & Secure.
          </p>
        </div>
      </div>

      <div class="w-full flex justify-center relative z-20 animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-300">
            <ConverterWrapper client:visible />
      </div>

      <div class="flex flex-wrap items-center justify-center gap-4 pt-16 animate-in fade-in slide-in-from-bottom-4 duration-1000 delay-200">
        <a href="https://github.com/NezordMC/mrpack-converter" target="_blank" rel="noopener noreferrer">
          <Button variant="outline" className="gap-2 border-white/10 bg-white/5 hover:bg-white/10 backdrop-blur-sm transition-all hover:scale-105">
            <Github className="w-4 h-4" />
            Star on GitHub
          </Button>
        </a>
      </div>

      <footer class="mt-auto pt-20 pb-6 text-center text-sm text-muted-foreground/60 relative z-10">
        <p>&copy; {new Date().getFullYear()} Mrpack Converter. Built with Astro.</p>
      </footer>

    </div>
  </AuroraBackground>
</MainLayout>
